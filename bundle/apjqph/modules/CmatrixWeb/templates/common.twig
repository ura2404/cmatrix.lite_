{#
    Общая форма

    blocks
        -style
        -js
        -name
        -nameTitle
        -current
        -actions
#}
<html>
    <head>
        <link rel="icon" href="{% block favicon %}res/CmatrixWeb/ico/honeycomb.ico{% endblock %}" type="image/x-icon"/> 
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
        <title>{{ app.name }} v{{ app.version }}</title>
        <link rel="stylesheet" type="text/css" href="res/CmatrixWeb/vendor/tailwindcss.com/tailwind.min.css"/>
        <link rel="stylesheet" type="text/css" href="res/CmatrixWeb/vendor/fontawesome.com/5.15.2/css/all.css"/>
        <link rel="stylesheet" type="text/css" href="res/CmatrixWeb/vendor/google.com/fonts/Arsenal/font.less"/>
        <link rel="stylesheet/less" type="text/css" href="res/CmatrixWeb/html.less"/>
        {% block style %}
            <link rel="stylesheet/less" type="text/css" href="res/CmatrixWeb/common.less"/>
        {% endblock style %}
        <script type="text/javascript" src="res/CmatrixWeb/vendor/lesscss.org/3.7.1/less.min.js"></script>
    </head>
    <body>
        <header class="bg-gray-500 text-white h-10 fixed top-0 left-0 right-0 z-10">
            <div class="container mx-auto flex h-full">
                <a id="cm-logo" href="{{ url.home }}" class="cm-hover my-auto text-6xl _w-11 flex-shrink-0">
                    <span class="_m-auto">~</span>
                    {# <i class="m-auto fas fa-at"></i> #}
                </a>
                
                {#
                <div id="cm-logo" class="text-2xl w-11 flex-shrink-0 flex">
                    <i class="m-auto fas fa-at"></i>
                </div>
                #}
                
                <div class="cm-name my-auto pl-1 pr-2 _font-bold text-2xl text-green-400 truncate _flex-none" title="{% block nameTitle %}{% endblock %}">{% block name %}{% if app.module %}{{ app.module }}{% else %}{{ app.name }}{% endif %}{% endblock %}</div>
                {% block current %}{# {{ session.hid }} #}{% endblock %}
                <div id="cm-actions" class="flex ml-auto">{% block actions %}{% endblock %}</div>
            </div>
        </header>
        
        <div class="pt-10 pb-6 w-full">
            {% block main %}{% endblock %}
        </div>
        
        <footer class="bg-gray-500 text-white text-xs h-6 fixed bottom-0 left-0 right-0 z-10">
            <div class="container mx-auto px-3 flex h-full">
                <div class="m-auto">{{ app.name }} &copy; <span>v{{ app.version }}</span> by {{ app.author }}</div>
            </div>
        </footer>
        
        {% block popup %}
            <div class="cm-back cm-win-container cm-behind z-50 flex flex-col">
                <div id="wi-success" class="cm-win my-auto bg-green-400 bg-opacity-90 text-white p-5">
                    <div class="cm-text container mx-auto text-center"></div>
                </div>
            </div>
            
            <div class="cm-back cm-win-container cm-behind z-50 flex flex-col">
                <div id="wi-error" class="cm-win my-auto bg-red-300 bg-opacity-95 text-white p-5">
                    <div class="cm-text container mx-auto text-center"></div>
                    <div class="container mx-auto flex">
                        <button type="button" class="cm-a-close cm-hover focus:ring-4 focus:ring-green-400 focus:ring-opacity-50 rounded mx-auto mt-5 px-3 py-1.5 bg-red-400">Закрыть</button>
                    </div>
                </div>
            </div>
        {% endblock %}
        
        {#
        <div id="cm-confirm" class="cm-wp fixed inset-0 _flex _hidden">
            <div class="w-screen h-screen opacity-0 duration-100 flex flex-col">
                <div class="m-auto bg-blue-400 bg-opacity-80 text-white p-5 w-full text-center">
                    <div class="cm-text text-lg"></div>
                    <div class="flex mt-5">
                        <button class="cm-yes ml-auto mr-4 py-2 px-6 bg-green-300 text-white _font-semibold rounded-sm shadow-md hover:bg-green-500 focus:outline-none duration-75">{{ local.yes|capitalize }}</button>
                        <button class="cm-no mr-auto ml-4 py-2 px-6 bg-red-300 text-white _font-semibold rounded-sm shadow-md hover:bg-red-500 focus:outline-none duration-75">{{ local.no|capitalize }}</button>
                    </div>
                </div>
            </div>
        </div>
        
        <div id="cm-success" class="cm-wp fixed inset-0 _flex _hidden">
            <div class="flex w-screen h-screen opacity-0 duration-200">
                <div class="cm-container m-auto bg-green-400 bg-opacity-80 text-white p-5 w-full _text-center flex"><span class="cm-text m-auto"></span></div>
            </div>
        </div>
        
        <div id="cm-error" class="cm-wp fixed inset-0 _flex _hidden">
            <div class="flex w-screen h-screen opacity-0 duration-200">
                <div class="cm-container m-auto bg-red-300 bg-opacity-80 text-white p-5 w-full _text-center flex"><span class="cm-text m-auto"></span></div>
            </div>
        </div>
        #}
        
    </body>

    <script type="text/javascript" src="res/CmatrixWeb/vendor/jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="res/CmatrixWeb/vendor/jquery.com/jquery.md5.js"></script>
    <script type="text/javascript" src="res/CmatrixWeb/vendor/jquery.js"></script>
    {% block js %}
        <script type="text/javascript" src="res/CmatrixWeb/common.js"></script>
    {% endblock js %}
</html>
