                        <button class="cm-no mr-auto ml-4 py-2 px-6 bg-red-300 text-white _font-semibold rounded-sm shadow-md hover:bg-red-500 focus:outline-none duration-75">{{ local.no|capitalize }}</button>
                    </div>
                </div>
            </div>
        </div>
        
        <div id="cm-success" class="cm-wp fixed inset-0 _flex _hidden">
            <div class="flex w-screen h-screen opacity-0 duration-200">
                <div class="cm-container m-auto bg-green-400 bg-opacity-80 text-white p-5 w-full _text-center flex"><span class="cm-text m-auto"></span></div>
            </div>
        </div>
        
        <div id="cm-error" class="cm-wp fixed inset-0 _flex _hidden">
            <div class="flex w-screen h-screen opacity-0 duration-200">
                <div class="cm-container m-auto bg-red-300 bg-opacity-80 text-white p-5 w-full _text-center flex"><span class="cm-text m-auto"></span></div>
            </div>
